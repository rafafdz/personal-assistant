# Production Environment Variables
# Copy this file to .env on your VPS and fill in the actual values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Anthropic API (for Claude Agent SDK)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ElevenLabs API (for speech synthesis) - Optional
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Google Maps API - Optional
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=telegram_agent

# Database Connection URL (constructed from above values)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

